<h4>{{location}}on {{date}}</h4>
<h5>The weather was: {{weather}}</h5>

<img src="{{bird.image_url}}">
<div class="api-section">
    <form class="api-search row justify-content-center">
        <input class="form-control w-50 opacity-75 mb-2" type="search" name="search" id="search-field" placeholder="search">
    <div class="btn-group w-75 btn-group-sm">
        <input class="btn btn-outline-light" type="submit" id="apiSubmitBtn" placeholder="Search">
        <button class="btn btn-outline-light" id="refreshApiBtn">Refresh Search</button>
    </div>
        <div id="apiDetails"></div>
    </form>
</div>

<section id="birdCard">
    <div>
        {{#each birds}}
        {{> bird-details}}
        {{/each}}
    </div>
    <div class="sightingCard">
        {{#each sightings}}
        {{> sighting-details}}
        {{/each}}
    </div>  
</section>



