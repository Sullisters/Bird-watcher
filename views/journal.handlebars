<img id="journal-main-photo"/>

<section id="birdCard">
    <div>
        {{#each bird as |bird|}}
        {{> bird-details}}
        {{/each}}
    </div>
</section>
{{!-- if bird=true then new sighting card offered --}}
<section class="sightingCard">
<a href="/sighting/{{id}}">
    {{#each sighting}}
    {{> sighting-details}}
    {{/each}}
</a>
<section class="journalButtons">
    <button id="sighting">Sighting info</button>
    <button id="bird">Bird Info</button>
    <button id="getlocation">Location Info</button>
    <button id="upload_widget">Upload files</button>
</section>

<form action="" class="api-search">
    <input type="text" name="search" id="search-field" placeholder="search">
    <button id="apiBtn">Search</button>
</form>

<div id="apiDetails"></div>

