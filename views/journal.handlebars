
<h4>{{location}}on {{date}}</h4>
<h5>The weather was: {{weather}}</h5>

<img src="{{bird.image_url}}">

<section id="birdCard">
    <div>
        {{#each birds}}
        {{> bird-details}}
        {{/each}}
    </div>
</section>
{{!-- if bird=true then new sighting card offered --}}
<div class="sightingCard">
    {{#each sightings}}
    {{> sighting-details}}
    {{/each}}
</div>  

<div class="api-section">
    <form class="api-search">
        <input type="search" name="search" id="search-field" placeholder="search">
        <input type="submit" id="apiSubmitBtn" placeholder="Search">
    </form>
    <div class="refresh-output">
        <button id="refreshApiBtn">Refresh Search</button>
        <div id="apiDetails"></div>
    </div>
</div>

{{> birdForm-details}}


