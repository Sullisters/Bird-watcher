
{{!-- sighting --}}
{{!-- bird --}}
<h2>Created by: {{User.name}} on {{date}}</h2>
<h3>Location: {{location}}</h3>
<h3>Weather: {{weather}}</h3>
<form id="cloudinary">
<input type="file" id="cloudinaryjournal-upload">
<input type="submit" id="cloudinaryjournal-submit">
</form>
<img id="journal-main-photo">

<section id="birdCard">
    <div>
        {{#each bird as |bird|}}
        {{> bird-details}}
        {{/each}}
    </div>
</section>
<section class="sightingCard">
<a href="/sighting/{{id}}">
    {{#each sighting as |sighting|}}
    {{> sighting-details}}
    {{/each}}
</a>
</section>

<button id="upload_widget" class="cloudinary-button">Upload files</button>

<form action="" class="api-search">
    <input type="text" name="search" id="search-field" placeholder="search">
    <button id="apiBtn">Search</button>
</form>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script src="/js/animalsAPI.js" type="text/javascript"></script>